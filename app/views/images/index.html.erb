<h1>Listing images</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Imageurl</th>
      <th>Views</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.name, image %></td>
        <td><%= link_to image.imageUrl, image.imageUrl %></td>
        <td><%= image.views %></td>
        <td><%= image.created_at %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

